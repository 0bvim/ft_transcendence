# ft_transcendence - Root Environment Configuration
# Common/shared variables across all services
# Copy this file to .env and customize as needed

# Project Configuration
PROJECT_NAME=ft_transcendence
NETWORK_NAME=ft-net

# Port Allocations (Sequential 3000s)
FRONTEND_PORT=3000
GAME_PORT=3006
TOURNAMENT_PORT=3003
BLOCKCHAIN_PORT=3004
BLOCKCHAIN_NODE_PORT=3005

# Logging Configuration
LOG_LEVEL=info

# Observability Stack
ELASTICSEARCH_VERSION=9.0.2
KIBANA_VERSION=9.0.2
ELASTICSEARCH_DISCOVERY_TYPE=single-node
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m
ELASTICSEARCH_SECURITY_ENABLED=false
ELASTICSEARCH_JAVA_OPTIONS=-XX:UseSVE=0
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_DATA_VOLUME=esdata

# Passwords (use strong, unique passwords in your .env file)
ELASTIC_PASSWORD=changeme

# Shared Security
JWT_SECRET=your-super-secret-jwt-key-here

# Development URLs
FRONTEND_URL=https://localhost:3000

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Enable SSL for observability services (true/false)
SSL_ENABLED=true

# Certificate paths (relative to project root)
SSL_CERT_PATH=./devops/certs

# Elasticsearch SSL Configuration
ELASTICSEARCH_SSL_ENABLED=${SSL_ENABLED}
ELASTICSEARCH_SSL_CERT=${SSL_CERT_PATH}/elasticsearch.crt
ELASTICSEARCH_SSL_KEY=${SSL_CERT_PATH}/elasticsearch.key

# Kibana SSL Configuration
KIBANA_SSL_ENABLED=${SSL_ENABLED}
KIBANA_SSL_CERT=${SSL_CERT_PATH}/kibana.crt
KIBANA_SSL_KEY=${SSL_CERT_PATH}/kibana.key

# Logstash SSL Configuration
LOGSTASH_SSL_ENABLED=${SSL_ENABLED}
LOGSTASH_SSL_CERT=${SSL_CERT_PATH}/logstash.crt
LOGSTASH_SSL_KEY=${SSL_CERT_PATH}/logstash.key

# Prometheus SSL Configuration
PROMETHEUS_SSL_ENABLED=${SSL_ENABLED}
PROMETHEUS_SSL_CERT=${SSL_CERT_PATH}/prometheus.crt
PROMETHEUS_SSL_KEY=${SSL_CERT_PATH}/prometheus.key

# Grafana SSL Configuration
GRAFANA_SSL_ENABLED=${SSL_ENABLED}
GRAFANA_SSL_CERT=${SSL_CERT_PATH}/grafana.crt
GRAFANA_SSL_KEY=${SSL_CERT_PATH}/grafana.key
