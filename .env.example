# ft_transcendence - Root Environment Configuration
# Common/shared variables across all services
# Copy this file to .env and customize as needed

# Project Configuration
PROJECT_NAME=ft_transcendence
NETWORK_NAME=ft-net

# Port Allocations
FRONTEND_PORT=3000
GAME_PORT=3002
TOURNAMENT_PORT=3003
BLOCKCHAIN_PORT=3004
BLOCKCHAIN_NODE_PORT=3005
GRAFANA_PORT=3006
PROMETHEUS_PORT=9090
ELASTICSEARCH_PORT=9200
KIBANA_PORT=5601
LOGSTASH_PORT=5001

# Logging Configuration
LOG_LEVEL=info

# Observability Stack
ELASTICSEARCH_VERSION=9.0.2

ELASTICSEARCH_DISCOVERY_TYPE=single-node
ELASTICSEARCH_JAVA_OPTS=-Xms512m -Xmx512m

ELASTICSEARCH_DATA_VOLUME=esdata

# =============================================================================
# INFRASTRUCTURE AUTHENTICATION
# =============================================================================
# Built-in user passwords for observability stack
# Change these from defaults for security!

# Elasticsearch Authentication
# The 'elastic' user is the superuser, used for administrative tasks
# and for services like Logstash that need broad write permissions.
# Note: The 'elastic' user is intentionally used by services like Logstash
#       that require broad write permissions.
ELASTIC_USER=elastic
ELASTIC_PASSWORD=ftsecret
ELASTICSEARCH_USERNAME=kibana_system
KIBANA_SYSTEM_PASSWORD=syspass
LOGSTASH_SYSTEM_PASSWORD=syspass
BEATS_SYSTEM_PASSWORD=syspass
APM_SYSTEM_PASSWORD=syspass
REMOTE_MONITORING_USER_PASSWORD=syspass

# Grafana Authentication
GRAFANA_ADMIN_USER=grafana
GRAFANA_ADMIN_PASSWORD=ftsecret

# Prometheus Authentication
PROMETHEUS_USERNAME=prometheus
PROMETHEUS_PASSWORD=ftsecret

# Shared Security
JWT_SECRET=your-super-secret-jwt-key-here


# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
# Enable SSL for observability services (true/false)
SSL_ENABLED=true
# Certificate Paths for Services
ELASTICSEARCH_CERTS_PATH=./devops/certs
KIBANA_CERTS_PATH=./devops/certs
LOGSTASH_CERTS_PATH=./devops/certs
PROMETHEUS_CERTS_PATH=./devops/certs
GRAFANA_CERTS_PATH=./devops/certs
# Microservice certificate paths
AUTH_CERTS_PATH=./packages/ms-auth/certs
