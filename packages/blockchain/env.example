# =============================================================================
# BLOCKCHAIN SERVICE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values as needed

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3004
HOST=0.0.0.0

# =============================================================================
# BLOCKCHAIN NETWORK CONFIGURATION
# =============================================================================
# Local development (default - using blockchain-node container)
AVALANCHE_RPC_URL=http://blockchain-node:8545
AVALANCHE_CHAIN_ID=1337

# Alternative: Avalanche Fuji Testnet (requires external setup)
# AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
# AVALANCHE_CHAIN_ID=43113

# Alternative: Avalanche Mainnet (production only)
# AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc
# AVALANCHE_CHAIN_ID=43114

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Local development private key (from Hardhat accounts)
PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# For testnet/mainnet: Generate with: npm run generate-wallet
# PRIVATE_KEY=your_generated_private_key_here

# =============================================================================
# SMART CONTRACT CONFIGURATION
# =============================================================================
# Contract address (auto-set by deployment script in local mode)
TOURNAMENT_SCORING_CONTRACT_ADDRESS=

# =============================================================================
# GAS CONFIGURATION
# =============================================================================
# Gas settings for transactions
GAS_LIMIT=3000000
GAS_PRICE=20000000000

# =============================================================================
# OBSERVABILITY & LOGGING
# =============================================================================
LOG_LEVEL=info

# Logstash connection (for ELK stack)
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5001

# =============================================================================
# MICROSERVICES COMMUNICATION
# =============================================================================
# Other service URLs (internal container communication)
TOURNAMENT_SERVICE_URL=http://tournament:4243
AUTH_SERVICE_URL=http://authentication:3001
FRONTEND_URL=http://frontend:3010

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable verbose contract interaction logging
ENABLE_CONTRACT_LOGS=true

# Enable transaction monitoring
ENABLE_TX_MONITORING=true 