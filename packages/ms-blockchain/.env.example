FRONTEND_URL=http://localhost:3000

# Database (for caching blockchain data)
DATABASE_URL=file:./blockchain.db

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here

# Monitoring
REPORT_GAS=true
ENABLE_METRICS=true

