# ms-frontend - Frontend Service Environment Configuration
# Copy this file to .env and customize as needed

# Development Configuration
NODE_ENV=development
VITE_API_BASE_URL=http://localhost:3000

# Service URLs
VITE_AUTH_SERVICE_URL=http://localhost:3001
VITE_GAME_SERVICE_URL=http://localhost:3002
VITE_TOURNAMENT_SERVICE_URL=http://localhost:3003
VITE_BLOCKCHAIN_SERVICE_URL=http://localhost:3004

# Frontend-specific settings
VITE_APP_TITLE=ft_transcendence
VITE_DEBUG_MODE=true

# Logging Configuration
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5001
LOG_LEVEL=info
APP_VERSION=1.0.0
