# =============================================================================
# MS-FRONTEND SERVICE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values as needed

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=3010
HOST=0.0.0.0

# =============================================================================
# API ENDPOINTS CONFIGURATION
# =============================================================================
# Backend service URLs (for API calls)
AUTH_SERVICE_URL=http://authentication:3001
TOURNAMENT_SERVICE_URL=http://tournament:4243
GAME_SERVICE_URL=http://game:3003
BLOCKCHAIN_SERVICE_URL=http://blockchain:3004

# Public API base URL (accessible from browser)
API_BASE_URL=http://localhost:3001/api

# =============================================================================
# FRONTEND BUILD CONFIGURATION
# =============================================================================
# Build-time environment
VITE_APP_TITLE=ft_transcendence
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3003

# =============================================================================
# CORS & SECURITY
# =============================================================================
# Allowed origins for CORS (if running server-side)
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3010

# =============================================================================
# OBSERVABILITY & LOGGING
# =============================================================================
LOG_LEVEL=info

# Logstash connection (for ELK stack)
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5001

# =============================================================================
# STATIC FILE SERVING
# =============================================================================
# Static assets configuration
SERVE_STATIC_FILES=true
STATIC_FILES_PATH=./dist

# =============================================================================
# SESSION & COOKIES
# =============================================================================
# Session configuration (if using server-side rendering)
SESSION_SECRET=your-frontend-session-secret-here
COOKIE_DOMAIN=localhost
COOKIE_SECURE=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable hot module replacement (development only)
ENABLE_HMR=true

# Enable source maps
ENABLE_SOURCE_MAPS=true 