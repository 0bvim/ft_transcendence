{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist-server",
    "rootDir": "./src",
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "src/server.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist-server",
    "src/main.ts",
    "src/pages/**",
    "src/components/**",
    "src/api/**",
    "src/router/**"
  ]
} 