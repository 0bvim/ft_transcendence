# =============================================================================
# TOURNAMENT SERVICE ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update values as needed

# =============================================================================
# SERVICE CONFIGURATION
# =============================================================================
NODE_ENV=production
PORT=4243
HOST=0.0.0.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite database path (relative to service root)
DATABASE_URL=file:./tournament.db

# =============================================================================
# OBSERVABILITY & LOGGING
# =============================================================================
LOG_LEVEL=info

# Logstash connection (for ELK stack)
LOGSTASH_HOST=logstash
LOGSTASH_PORT=5001

# =============================================================================
# MICROSERVICES COMMUNICATION
# =============================================================================
# Other service URLs (internal container communication)
AUTH_SERVICE_URL=http://authentication:3001
GAME_SERVICE_URL=http://game:3003
BLOCKCHAIN_SERVICE_URL=http://blockchain:3004

# =============================================================================
# TOURNAMENT CONFIGURATION
# =============================================================================
# Default tournament settings
DEFAULT_MAX_PARTICIPANTS=8
DEFAULT_TOURNAMENT_TYPE=single_elimination

# =============================================================================
# BLOCKCHAIN INTEGRATION
# =============================================================================
# Enable blockchain score recording (requires blockchain service)
ENABLE_BLOCKCHAIN_SCORES=true 